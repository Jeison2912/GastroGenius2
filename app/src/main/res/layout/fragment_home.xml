<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@color/mediumgray">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

      <EditText
          android:id="@+id/editText3"
          android:layout_width="323dp"
          android:layout_height="56dp"
          android:layout_margin="8dp"
          android:background="@drawable/search_bg"
          android:drawableStart="@drawable/busqueda1"
          android:drawablePadding="5dp"
          android:fontFamily="@font/amita"
          android:hint="@string/search_resets"
          android:padding="10dp"
          android:textColor="@color/white"
          android:textColorHint="@color/white"
          android:textSize="13sp"
          android:translationY="40dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.054"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <!-- RecyclerView Horizontal -->

      <!-- RecyclerView Vertical -->

      <ImageView
          android:layout_width="69dp"
          android:layout_height="67dp"
          android:background="@drawable/search_bg"
          android:padding="10dp"
          android:src="@drawable/perfil"
          app:layout_constraintBottom_toTopOf="@+id/home_hor_rec"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.142"
          app:layout_constraintStart_toEndOf="@+id/editText3"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.344" />

      <TextView
          android:id="@+id/text1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="6dp"
          android:layout_marginStart="239dp"
          android:layout_marginTop="48dp"
          android:layout_marginEnd="234dp"
          android:fontFamily="@font/amarante"
          android:text="@string/Bienvenido"
          android:textColor="@color/white"
          android:textSize="35sp"
          android:translationY="40dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.513"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/editText3" />

      <TextView
          android:id="@+id/textView7"
          android:layout_width="156dp"
          android:layout_height="32dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="40dp"
          android:layout_marginEnd="296dp"
          android:fontFamily="@font/amita"
          android:text="@string/que_buscas"
          android:textColor="@color/white"
          android:textSize="20sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/text1" />

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/home_hor_rec"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="6dp"
          android:layout_marginTop="60dp"
          app:layout_constraintTop_toBottomOf="@+id/textView7"
          tools:ignore="MissingConstraints"
          tools:layout_editor_absoluteX="-4dp" />

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/home_ver_rec"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="6dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/home_hor_rec" />

   </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
